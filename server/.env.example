PORT=5000
# MongoDB Atlas Connection String
# Get this from: MongoDB Atlas Dashboard > Connect > Connect your application
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/waldrive?retryWrites=true&w=majority
NODE_ENV=development

# Walrus Configuration
WALRUS_CLI_PATH=/home/rootp1/.local/bin/walrus
WALRUS_CONTEXT=testnet
WALRUS_AGGREGATOR=https://aggregator.walrus-testnet.walrus.space
# Number of epochs to store blobs (1 epoch ~= 24 hours on testnet)
# Testnet max: 53 epochs. Recommended: 3-10 epochs for testing.
WALRUS_EPOCHS=5

# Upload Configuration
MAX_FILE_SIZE=104857600
UPLOAD_DIR=./uploads
CACHE_DIR=./cache
